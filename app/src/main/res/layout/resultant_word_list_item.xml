<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:layout_height="wrap_content"
    android:weightSum="4">

    <!-- Appears on swipe to the right -->
    <ImageView
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:src="@drawable/ic_delete_black_24dp"
        android:background="@color/red"
        android:visibility="gone"
        android:contentDescription="@string/delete_button_content_description"/>

    <!-- Appears on long press -->
    <ImageView
        android:id="@+id/reorder_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        android:src="@drawable/ic_reorder_black_24dp"
        android:visibility="gone"
        android:contentDescription="@string/move_button_content_description"/>

    <TextView
        android:id="@+id/resultant_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>