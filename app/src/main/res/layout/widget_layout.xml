<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin"
    android:background="@color/colorPrimaryLight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView android:id="@+id/widget_slot_1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="1dp"
            android:src="@drawable/one"
            android:contentDescription="@string/wheel_view_content_description"/>
        <ImageView android:id="@+id/widget_slot_2"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="1dp"
            android:src="@drawable/one"
            android:contentDescription="@string/wheel_view_content_description"/>
        <ImageView android:id="@+id/widget_slot_3"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="1dp"
            android:src="@drawable/one"
            android:contentDescription="@string/wheel_view_content_description"/>
        <ImageView android:id="@+id/widget_slot_4"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="1dp"
            android:src="@drawable/one"
            android:contentDescription="@string/wheel_view_content_description"/>
        <ImageView android:id="@+id/widget_slot_5"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="1dp"
            android:src="@drawable/one"
            android:contentDescription="@string/wheel_view_content_description"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/widget_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"/>
        <Button
            android:id="@+id/widget_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/widget_custom_button"
            android:text="@string/roll_button_text"/>
    </LinearLayout>

</LinearLayout>