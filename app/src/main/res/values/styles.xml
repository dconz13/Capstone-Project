<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Settings theme -->
    <style name="SettingsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tutorial_header_text" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tutorial_body_text" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView">
        <item name="sv_backgroundColor">@color/showcase_background</item>
        <item name="sv_titleTextAppearance">@style/CustomShowcaseTitle</item>
        <item name="sv_showcaseColor">@color/colorAccent</item>
        <item name="sv_tintButtonColor">true</item>
    </style>

    <style name="CustomShowcaseTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
